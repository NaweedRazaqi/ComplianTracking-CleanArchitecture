    <script src="~/assets/js/core/libraries/jquery.min.js"></script>
    <script src="~/assets/js/plugins/barcode/JsBarcode.all.js"></script>
</head>
<body style="direction:ltr;">
    <div id="form" class="div-mainform div-form" style="margin-right:auto; margin-left:auto;">


        <div class="container" id="mainform">

            <div class="row">

                <input type="hidden" value="@Model.ComplainTypeId" id="code_print" />
                <table id="FirstTable" >
                    <tr>
                        <th align="center" valign="middle" class="Middlelabel">
                            <br /><br />
                            <h3>
                               وزارت مالیه

                            </h3>
                            <h3> ریاست خزینه تقاعد</h3>
                            <h3>رسید شکایت شما</h3>
                            <br />
                        </th>

                    </tr>

                </table>
                <hr />
            </div>
            <div class="row">
                <table   dir="rtl" id="secondtable">

                    <thead direction:rtl>
                        <tr>
                            <td>شماره درخواست</td>
                            <td>@Model.Id</td>
                        </tr>
                        <tr>
                            <td>شماره سیستم</td>
                            <td>@Model.PensionerCode</td>
                        </tr>
                        <tr>
                            <td>تاریخ عریضه</td>
                            <td>@Model.createdOnShamsi</td>
                        </tr>
                        <tr>
                            <td>تاریخ مراجعه</td>
                            <td>@Model.finalretrundateshamsi</td>
                        </tr>
                        <tr>
                            <td>موضوع درخواست</td>
                            <td>@Model.CaseText</td>
                        </tr>
                    </thead>
                </table>
                <hr />
                <table   dir="rtl" id="thirdtable">
                    <thead>
                        <tr>
                            <td>نام ثبت کننده</td>
                            <td>@Model.userName</td>
                        </tr>
                        <tr>
                            <td> بخش مربوط </td>
                            <td>@Model.UnitText</td>
                        </tr>
                    </thead>

                </table>
                <hr />
                <div class="row">
                    <table dir="rtl" id="fourthtable">
                        <thead>
                            <tr>
                                <td><span>قبل از مراجعه به شماره ۱۴۵ به تماس شوید.</span></td>
                            </tr>


                        <tr class="img-barcode" align="center">
                            <svg id="barcode1"></svg>
                        </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>


    </div>

    <script>

        $(document).ready(function () {
            debugger;
            var CaseId = $('#code_print').val();
            var MOF = "MOF-Complains";
            JsBarcode("#barcode1", `${MOF}${CaseId}`);
        });


    </script>
</body>
</html>